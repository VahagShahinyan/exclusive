<%-include('../includes/header.ejs')%>
<section class="bg-body section-space-less30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="row catNews">
                    <!------------------------------->
                    <%if(posts.length>0){ %>

                        <% posts.forEach(post=>{%>
                            <div class="col-sm-3 col-12">

                                <div class="mb-30">
                                    <div class="position-relative mb-20">
                                        <a class="img-opacity-hover" href="/post/<%=post.id%>/<%=lang%>">
                                            <img src="/upload/temp/560/<%=post.featured_image.image_path%>" alt="<%=post.featured_image.image_alt%>" class="img-fluid width-100">
                                        </a>
                                        <div class="topic-box-top-xs">
                                            <div class="topic-box-sm color-cod-gray mb-20"><%=post.cat_title%></div>
                                        </div>
                                    </div>
                                    <div class="post-date-dark">
                                        <ul>
                                            <li>
                                                <span><i class="fa fa-calendar" aria-hidden="true"></i></span>
                                                <span class="dateTime" value="<%=post.date%>"></span>
                                            </li>
                                        </ul>
                                    </div>
                                    <h3 class="title-medium-dark size-lg mb-none">
                                        <a href="/post/<%=post.id%>/<%=lang%>"><%=post.title%></a>
                                    </h3>
                                </div>
                            </div>

                            <%})%>
                    <%}%>

                
                </div>
                <div class="row mt-20-r mb-30">
                    <div class="col-sm-6 col-12">
                        <div class="pagination-btn-wrapper text-center--xs mb15--xs">
<!--pagination-->

                            <ul>
                                <% if (pagination.currentPage !==1 && pagination.previousePage !==1) {%>
                                    <li><a href="?page=1"> << </a></li>

                                <%} %>
                                <% if (pagination.currentPage !==1 && pagination.hasPreviousePage) {%>
                                <li><a href="?page=<%=pagination.previousePage%>"> < </a></li>

                                <%} %>

                                <% if (pagination.hasPreviousePage) {%>
                                <li><a href="?page=<%=pagination.previousePage%>"><%=pagination.previousePage%></a></li>
                                <%} %>
                                <% if (pagination.currentPage) {%>
                                <li class="active"> <a href="?page=<%=pagination.currentPage%>"><%=pagination.currentPage%></a></li>

                                <%} %>

                                <% if (pagination.hasNextPage) {%>
                                <li><a href="?page=<%=pagination.nextPage%>"><%=pagination.nextPage%></a></li>

                                <%} %>
                                <% if (pagination.hasNextPage) {%>
                                <li><a href="?page=<%=pagination.nextPage%>"> > </a></li>
                                <%} %>
                                <% if (pagination.lastPage !==pagination.currentPage && pagination.nextPage !==pagination.lastPage) {%>
                                <li><a href="?page=<%=pagination.lastPage%>">>></a></li>

                                <%} %>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

